@model  SV21T1020102.DomainModels.Category
@{
    ViewBag.Title = "Xóa Loại Hàng";
}
@{
}
<div class=" box box-danger">
    <div class="box-body ">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID">
            <div class="form-group">
                <label>Tên Loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
            </div>
            <div class="form-group">
                <label>Miêu tả Loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
            </div>
            
            <div class="form-group text-right">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!SV21T1020102.BusineesLayers.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>
                    }
                    <a class="btn btn-default" href="~/Category">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>

</div>


