@model SV21T1020102.DomainModels.Category
@{
}
<div class=" box box-primary">
    <div class="box-body ">
        <form action="~/Category/Save"method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>
            <div class="form-group">
                <label>Miêu tả loại hàng:</label>
                <input type="text" class="form-control"name="@nameof(Model.Description)" value="@Model.Description">
            </div>
            
            <div class="form-group text-right">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Category">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>

</div>
