@model SV21T1020102.DomainModels.Shipper
@{
}
<div class=" box box-primary">
    <div class="box-body ">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
                @Html.ValidationMessage(nameof(Model.ShipperName))
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>

            <div class="form-group text-right">              
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Shipper">
                        Quay lại
                    </a>               
            </div>

        </form>
    </div>

</div>
