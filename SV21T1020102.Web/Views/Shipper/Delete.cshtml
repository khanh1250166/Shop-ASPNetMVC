@model SV21T1020102.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa Người Giao Hàng";
}
<div class=" box box-danger">
    <div class="box-body ">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>
           
            <div class="form-group text-right">     
                @if (!SV21T1020102.BusineesLayers.CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa
                    </button>
                }          
                    <a class="btn btn-default" href="~/Shipper">
                        Quay lại
                    </a>               
            </div>

        </form>
    </div>

</div>

