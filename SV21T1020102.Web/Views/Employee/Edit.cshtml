@model SV21T1020102.DomainModels.Employee
@{
}
<div class=" box box-primary">
    <div class="box-body ">
        <form action="~/Employee/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.EmployeeId)" value="@Model.EmployeeId">
            <div class="form-group">
                <label>Tên nhân viên:</label>
                <input type="text" class="form-control"name="@nameof(Model.FullName)"value="@Model.FullName">
                @Html.ValidationMessage(nameof(Model.FullName))
            </div>
            <div class="form-group">
                <label>Ngày sinh:</label>
                <input type="hidden"name=" @nameof(Model.BirthDate)" value=" @Model.BirthDate"/>
                <input type="text" class="form-control date-picker" name="_BirthDate" value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))">
                
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone))
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="@nameof(Model.IsWorking)" value="true" @(Model.IsWorking ? "checked" : "")> Nhân viên đang làm việc</label>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />    
                    <input type="file" class="form-control" name="_Photo" accept="image/*"
                     onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                @Html.ValidationMessage(nameof(Model.Photo))
            </div>
            <div class="form-group">                          
                <img id="Photo" src="~/images/Employee/@Model.Photo" class="img img-bordered" style="width:200px" />
            </div>

            <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/Employee">
                        Quay lại
                    </a>
                
            </div>

        </form>
    </div>

</div>
