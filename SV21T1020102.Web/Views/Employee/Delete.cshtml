@model SV21T1020102.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
@{
}
<div class=" box box-danger">
    <div class="box-body ">
        <form action="~/Employee/Delete/@Model.EmployeeId "method="post">
            <input type="hidden" name="@nameof(Model.EmployeeId)" value="@Model.EmployeeId">
            <div class="form-group">
                <label>Tên nhân viên:</label>
                <p class="form-control-static">@Model.FullName</p>
            </div>
            <div class="form-group">
                <label>Ngày sinh:</label>
                <p class="form-control-static">@Model.BirthDate</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static">@Model.Email</p>
            </div>
            <div class="form-groups">
                <label>Trạng thái</label>
                <p class="form-control-static">@(Model.IsWorking ? "Nhân viên không hoạt động" : "Nhân viên đang hoạt động")</p>
            </div>        
            <div class="form-group">
                <input type="hidden" name="Photo" value="macbook.png" />
                <img id="Photo" src="~/themes/dist/img/user2-160x160.jpg/" class="img img-bordered" style="width:200px" />
            </div>
            
            <div class="form-group text-right">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!SV21T1020102.BusineesLayers.CommonDataService.InUsedEmployee(Model.EmployeeId))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xác nhận xóa
                        </button>
                    }
                    <a class="btn btn-default" href="~/Employee">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>

</div>


