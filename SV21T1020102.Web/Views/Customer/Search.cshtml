@model SV21T1020102.Web.Models.CustomerSearchResult
@{
	Layout = null;
}
    <p>Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="bg-primary">
                    <th>Tên khách hàng</th>
                    <th>Tên giao dịch</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Tỉnh thành</th>
                    <th>Bi khoa?</th>
                    <th style="width:80px;"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.Data)
                            {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.Province</td>
                            <td class=" text-center">@(item.IsLocked ? "x" : "")</td>
                            <td class="text-right">
                                <a href="/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <ul class="pagination">
            @if (Model.PageCount > 1)
            {
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    <li class="@(p == Model.Page ? "active" : "")">
                        <a href="javascript:;" data-page="@p">@p</a>
                    </li>
                }
            }
        </ul>
    </div>
